{
  "name": "rx-nostr",
  "version": "1.2.0",
  "description": "A library based on RxJS, which allows Nostr applications to easily communicate with relays.",
  "author": "penpenpng",
  "keywords": [
    "rxjs",
    "rxjs7",
    "nostr"
  ],
  "homepage": "https://penpenpng.github.io/rx-nostr/",
  "bugs": {
    "url": "https://github.com/penpenpng/rx-nostr/issues"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./types/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./types/src/index.d.ts"
    }
  },
  "files": [
    "src",
    "dist",
    "types",
    "!src/__test__",
    "!types/src/__test__",
    "!types/app"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/penpenpng/rx-nostr.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src/**/*.ts && prettier --check src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts && prettier --write src/**/*.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs"
  },
  "devDependencies": {
    "@types/node": "^18.15.10",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "markdown-it-attrs": "^4.1.6",
    "nostr-typedef": "^0.3.0",
    "prettier": "^2.8.7",
    "typescript": "^5.0.0",
    "vite": "^4.2.0",
    "vitest": "^0.32.0",
    "vitest-nostr": "^0.4.1",
    "vitest-websocket-mock": "^0.2.1",
    "vuepress": "2.0.0-beta.63"
  },
  "dependencies": {
    "@noble/curves": "^1.0.0",
    "@noble/hashes": "^1.3.0",
    "@scure/base": "^1.1.1",
    "normalize-url": "^8.0.0",
    "rxjs": "^7.8.0"
  }
}
